#!/bin/bash

VAGRANT_PATH=/opt/nw-project/Vagrantfile

case "$1" in
up)
    if [ ! `vagrant status` ]; then
        cd $VAGRANT_PATH && vagrant $1
    fi
;;
status)
    vagrant $1
;;
destroy)
    if [ `vagrant status` ]; then
        vagrant $1
    fi
;;
*)
    echo "Options: $0 {destroy|status|up}"
    exit 1
esac
